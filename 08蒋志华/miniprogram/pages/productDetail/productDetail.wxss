.btn_tool{
  /* 固定定位 */
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  /* 相对定位 */
  position: relative;
}
.tool_item button{
  /* 绝对定位 */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 不透明度 */
  opacity: 0;
}
.btn_cart{
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
}
.btn_buy{
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-top-right-radius: 10%;
